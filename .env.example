# IMIP - Intelligent Meeting Insights Platform
# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info
DEBUG=true
ENVIRONMENT=development

# ===========================================
# Database Configuration
# ===========================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/imip
# Alternative with authentication:
# MONGODB_URI=mongodb://username:password@localhost:27017/imip

# ===========================================
# AI/ML Model Configuration
# ===========================================
# Whisper model size: tiny, base, small, medium, large-v3
WHISPER_MODEL=small

# VOSK model path (optional - for offline speech recognition)
# VOSK_MODEL_PATH=/path/to/vosk/model

# HuggingFace cache directory
HF_HOME=./models/huggingface

# ===========================================
# OpenAI Configuration (Optional)
# ===========================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_SUMMARY_MODEL=gpt-3.5-turbo
OPENAI_ACTION_MODEL=gpt-3.5-turbo

# ===========================================
# Google AI Configuration (Optional)
# ===========================================
# Get your API key from https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ===========================================
# Security Configuration
# ===========================================
# JWT Secret Keys (generate strong random strings)
JWT_SECRET_KEY=your_jwt_secret_key_here_at_least_32_characters
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key_here_at_least_32_characters

# Token expiration times (in minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Cookie security settings
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=
COOKIE_AUTH_ENABLED=true
COOKIE_ACCESS_MAX_AGE=1800
COOKIE_REFRESH_MAX_AGE=604800

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum upload size in bytes (default: 500MB)
MAX_UPLOAD_SIZE=524288000

# Allowed file extensions
ALLOWED_UPLOAD_EXTENSIONS=.wav,.mp3,.m4a,.ogg,.webm,.mp4,.avi,.mov,.mkv,.flv,.wmv,.m4v,.txt,.md,.docx,.pdf,.rtf

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# ===========================================
# Rate Limiting Configuration
# ===========================================
# Requests per minute for different endpoints
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_ADMIN=3
RATE_LIMIT_REGISTER=3
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_REFRESH=10

# ===========================================
# FFmpeg Configuration
# ===========================================
# Path to FFmpeg binary (usually auto-detected)
# FFMPEG_BIN=/usr/bin/ffmpeg

# ===========================================
# Logging Configuration
# ===========================================
# Log file path (optional)
LOG_FILE=./logs/app.log

# Log rotation settings
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
